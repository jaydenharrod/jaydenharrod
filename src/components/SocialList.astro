---
import { SOCIAL_LINKS } from "../data/constants";
---

<div class="flex flex-wrap items-center gap-x-4 sm:items-center">
  <ul class="flex flex-1 items-center gap-x-4 sm:flex-initial">
    <li>
      <a
        class="inline-block sm:hover:text-link"
        href={SOCIAL_LINKS.linkedin}
        target="_blank"
        rel="noopener noreferrer"
      >
        <span class="cactus-link">LinkedIn</span>
      </a>
    </li>
    <li>
      <a
        class="inline-block sm:hover:text-link"
        href={SOCIAL_LINKS.youtube}
        target="_blank"
        rel="noopener noreferrer"
      >
        <span class="cactus-link">YouTube</span>
      </a>
    </li>
    <li>
      <a
        class="inline-block sm:hover:text-link"
        href={SOCIAL_LINKS.github}
        target="_blank"
        rel="noopener noreferrer"
      >
        <span class="cactus-link">Github</span>
      </a>
    </li>
  </ul>
</div>
